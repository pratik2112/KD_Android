<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/tv_10"
    android:layout_marginTop="@dimen/tv_5"
    android:layout_marginRight="@dimen/tv_10"
    android:layout_marginBottom="@dimen/tv_5"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_comp_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/tv_5"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/tv_5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/tv_5"
                android:paddingBottom="@dimen/tv_5">

                <TextView
                    android:id="@+id/tv_sno"
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:text="1."
                    android:textSize="@dimen/sp_14" />

                <TextView
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:maxLines="1"
                    android:text="@string/complaint_title1"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_comp_no"
                    style="@style/lblSemiB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/tv_5"
                android:paddingBottom="@dimen/tv_5">

                <TextView
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:maxLines="1"
                    android:text="@string/complaint_title2"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_comp_name"
                    style="@style/lblRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/tv_5"
                android:paddingBottom="@dimen/tv_5">

                <TextView
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:maxLines="1"
                    android:text="@string/complaint_title3"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_comp"
                    style="@style/lblRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/tv_5"
                android:paddingBottom="@dimen/tv_5">

                <TextView
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:maxLines="1"
                    android:text="@string/complaint_title4"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_comp_sdt"
                    style="@style/lblRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/tv_5"
                android:paddingBottom="@dimen/tv_5">

                <TextView
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:maxLines="1"
                    android:text="@string/complaint_title5"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_comp_edt"
                    style="@style/lblRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/tv_5"
                android:paddingBottom="@dimen/tv_5">

                <TextView
                    style="@style/lblSemiB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_5"
                    android:maxLines="1"
                    android:text="@string/complaint_title6"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_comp_status"
                    style="@style/lblRegular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
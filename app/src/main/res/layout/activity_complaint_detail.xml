<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/header_lay" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/lblSemiB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_10"
                android:layout_marginTop="@dimen/tv_10"
                android:layout_marginRight="@dimen/tv_10"
                android:text="@string/complaint_detail1"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_17" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/tv_10"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/tv_5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tv_10"
                    android:orientation="vertical">

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail2"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_no"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail3"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_dt"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail4"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_status"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail5"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_cate"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail6"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_desc"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail7"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_name"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail8"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_adrs"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="3"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail9"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_comp_mob_no"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                style="@style/lblSemiB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_10"
                android:layout_marginRight="@dimen/tv_10"
                android:text="@string/complaint_detail10"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_17" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/tv_10"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/tv_5"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/tv_10"
                    android:orientation="vertical">

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail11"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_er_name"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="2"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail12"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_er_mob_no"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail13"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_er_dt"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_13" />

                    <view
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tv_1"
                        android:layout_marginTop="@dimen/tv_8"
                        android:layout_marginBottom="@dimen/tv_8" />

                    <TextView
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/complaint_detail14"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_er_remark"
                        style="@style/lblRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/tv_8"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>